{
  "name": "@opensend/mcp-server",
  "version": "0.1.0",
  "description": "MCP server for MailForge - enables AI agents to send emails via natural tool calls",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "opensend-mcp": "./bin/opensend-mcp"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:stdio": "node dist/index.js --transport stdio",
    "start:http": "node dist/index.js --transport http",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "express": "^4.21.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "opensend",
    "email",
    "ai-agent",
    "claude",
    "transactional-email"
  ],
  "author": "Shashi Mudunuri",
  "license": "SEE LICENSE FILE",
  "repository": {
    "type": "git",
    "url": "https://github.com/reshashi/opensend.git",
    "directory": "packages/mcp-server"
  }
}
